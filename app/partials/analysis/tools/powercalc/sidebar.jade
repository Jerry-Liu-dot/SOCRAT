div(ng-controller="powercalcSidebarCtrl as sidebar")
  form
    legend Parameters &nbsp;
      div.form-group
        fieldset
          label(
            style=''
            uib-tooltip="Choose an algorithm from the list below"
            tooltip-placement="left"
          ) Choose an algorithm from the list below &nbsp;
          select.form-control(
            style='margin-bottom:20px;'
            ng-model="sidebar.selectedAlgorithm"
            ng-options="method for method in sidebar.algorithms"
            ng-change="sidebar.updateAlgControls()"
          )
        div.bootstrap-switch-square
          h7 Data-Driven Mode &nbsp;&nbsp;
          input(
            type="checkbox"
            data-toggle="switch"
            id="toggle_switch"
            ng-model="sidebar.deployed"
            ng-change="sidebar.change_mode"
          )
        fieldset(ng-show="sidebar.deployed")
          legend Dataset
          div(uib-tooltip="2D projection is always visualized")
            select.form-control(
            multiple
            ng-model="sidebar.chosenCols"
            ng-options="col for col in sidebar.categoricalCols"
            ng-change="sidebar.calculateN(sidebar.df)"
            )
          div.form-group
            label Labels &nbsp;
            //- show data header column names
            select.form-control(
              ng-model="sidebar.chosenLabel"
              ng-options="col for col in sidebar.labelCol"
              ng-change="sidebar.updateVar(sidebar.df)"
            )
          div.form-group
            label Variables
            select.form-control(
            multiple
            ng-model="sidebar.chosenVars"
            ng-options="col for col in sidebar.vars"
            ng-change="sidebar.calculate(sidebar.df)"
            )
        div(ng-show="sidebar.selectedAlgorithm == 'Two-sample t test (general case)'" style='margin-top:20px;')
          div(style='display:inline')
            h9 Significance Level: &nbsp
            input#alphai(ng-disabled="true" name='alpha',style='border:0; background-color:#f5f5f5; color:#f6931f; font-weight:bold;' value='0.02')
        div(style='display:inline')
          #alphauii(uib-tooltip="Manipulate this bar to adjust Alpha" tooltip-placement="top")